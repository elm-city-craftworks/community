%nav
  %span.title
    = link_to "<strong>Community</strong> @ Mendicant University".html_safe,
      root_path
  = render :partial => "shared/flash", :locals => { :flash => flash }
  %span.nav
    = link_to "Updates", articles_path
    = link_to "About", about_path
    %span#account
      - if current_user
        = link_to "Post", new_article_path
        = link_to current_user.name, person_path(current_user.github)
        = link_to "Sign out", logout_path
      - else
        = link_to "Sign in with Github", login_path
