- content_for(:title) { @person.name }

#profile

  %h1
    = @person.icon(48)
    = @person.name

  .description
    = @person.description

  .social
    = @person.github_link
    = @person.twitter_link
    = @person.website

  - if current_user && current_user.id == @person.id
    .control-bar
      = link_to "Edit Profile", edit_person_path(current_user.github),
        :class => "clean-gray"