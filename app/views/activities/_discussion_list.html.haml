.activity
  .section
    .label
      %h3 Discussion List

    #discussion-list
      - if @activity.discussion_list
        = @activity.discussion_list.email_address
      - else
        = form_tag create_discussion_list_activity_path(@activity), :remote => true do
          .field
            = label_tag :name, "Discussion list name: "
            = text_field_tag :name
            = submit_tag "Create list"
          .errors